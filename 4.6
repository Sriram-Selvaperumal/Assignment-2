#include <stdio.h>

int main() {
    // Define the matrices A and B
    int A[2][2] = {{3, 4}, {2, 4}};
    int B[2][2] = {{1, 2}, {3, 4}};
    int C[2][2]; // Resultant matrix C

    // Perform matrix addition
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            C[i][j] = A[i][j] + B[i][j];
        }
    }

    // Display the resultant matrix C
    printf("Resultant Matrix C after addition:\n");
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            printf("%d ", C[i][j]);
        }
        printf("\n");
    }

    return 0;
}
