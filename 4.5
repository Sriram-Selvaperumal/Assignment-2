#include <stdio.h>

// Function to perform binary search
int binarySearch(int arr[], int size, int target) {
    int left = 0, right = size - 1;

    while (left <= right) {
        int mid = left + (right - left) / 2;

        // Check if the target is present at mid
        if (arr[mid] == target)
            return mid; // Return the index where the book is found

        // If the target is greater, ignore the left half
        if (arr[mid] < target)
            left = mid + 1;

        // If the target is smaller, ignore the right half
        else
            right = mid - 1;
    }

    return -1; // If the target is not found, return -1
}

int main() {
    int bookList[] = {1001, 1023, 1035, 1076, 1098, 1122, 1150}; // Ordered list of book IDs
    int size = sizeof(bookList) / sizeof(bookList[0]);
    int bookID;

    // Ask the user for the book ID to search
    printf("Enter the book ID to search: ");
    scanf("%d", &bookID);

    // Search for the book in the list
    int result = binarySearch(bookList, size, bookID);

    // Display the result
    if (result != -1)
        printf("Book with ID %d is available at position %d.\n", bookID, result + 1);
    else
        printf("Book with ID %d is not available in the library.\n", bookID);

    return 0;
}
