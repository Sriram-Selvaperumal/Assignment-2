#include <stdio.h>

int main() {
    int weights[5]; // Array to store the weights of the treasures
    int totalWeight = 0;

    // Collecting the weights from the user
    printf("Enter the weights of the 5 treasures:\n");
    for (int i = 0; i < 5; i++) {
        printf("Treasure %d: ", i + 1);
        scanf("%d", &weights[i]);
    }

    // Calculating the total weight
    for (int i = 0; i < 5; i++) {
        totalWeight += weights[i];
    }

    // Displaying the total weight
    printf("Total weight collected: %d\n", totalWeight);

    return 0;
}
